
    {{>header}} 

<article class="top_section">
    <section id="error-box" aria-live="polite" role="alert" {{#if info}}style="display:block; border: 2px solid red;"{{else if infoArray}}style="display:block; border: 2px solid red;"{{else}}style="display: none;"{{/if}}>{{info}}{{#each infoArray}} <p> {{this}} </p> {{/each}}</section>
    <div class="event_container">
        <div class="event_band_image-container">
            <img class="bandImage" src="/images/bandimages/{{concert.imgSrc}}" alt="Band">
        </div>
        <section class="event_info">
            <h1 class="artistName">
                <!--Shows the band names in a row, separated by a / -->
                {{#each concert.artists}}
                    {{#if @first}}
                        {{this}}
                    {{else}}
                        / {{this}}
                    {{/if}}
                {{/each}}
            </h1>
            <h2>{{concert.date}}</h2>
            <h2>{{concert.place}}, {{concert.city}}</h2>
        </section>
        <section class="enrollmentCount">
            <dt><label for="enrollment_count_event">Ilmoittautuneita</label></dt>
            <dd id="enrolment_count_event">xxx</dd>
        </section>
      
    </div>
</article>

{{#if alias}}
    <section id="find_friend" class="find_friend dark_bg">
        <section id="friend_search">
            <h2>Hae kaveria keikalle</h2>
            {{>friendsearchform}}
        </section>

        <!-- Friends from the database -->
        <section id="find-friend-results" class="event_search_results">
            {{>searchedFriends}}
        </section>
    </section>
{{else}}
    <p>Kirjaudu sisään, niin pääset hakemaan kavereita.</p>
    <section role="region" aria-label="Sign In / Sign Up">
                <button type="button" class="signIn_button" id="openLoginFormButton" onClick="toggleSignInForm()">Kirjaudu</button>
                <button type="button" class="signIn_button" id="openSignupFormButton" onClick="toggleSignUpForm()">Rekisteröidy</button>
            </section>
            {{>loginform currentPage}}
            {{>signupform}}
{{/if}}

{{>footer}}


