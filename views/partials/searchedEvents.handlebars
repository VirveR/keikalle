{{#each events}}
    
    <div class="event_card">

        <a href="/event/{{this._id}}" class="card-link" role="link" aria-label="Tapahtuman sivulle">
            <div class="event_card_image-container">
                <img class="bandImage" src="./images/bandimages/{{this.imgSrc}}" alt="Tapahtuman mainoskuva">
            </div>

            <!-- Event information -->
            <div class="eventInformation" role="region" aria-label="Tapahtuman tiedot">
                <h3 class="artistName">
                    <!--Shows the band names in a row, separated by a / -->
                    {{#each this.artists}}
                        {{#if @first}}
                            {{this}}
                        {{else}}
                            / {{this}}
                        {{/if}}
                    {{/each}}
                </h3>
                <p>{{this.date}}</p>
                <p>{{this.place}}, {{this.city}}</p>
            </div>
        </a>
        <!-- Enrolment area -->
        <div class="enrollmentCount" role="region" aria-label="Ilmoittautuminen">
            {{#if userLoggedIn}}
                {{#if userRegisteredToEvent}}
                    <button aria-label="Poista ilmoittautuminen" class="unRegisterFromEvent" id="delete_{{this._id}}" type="button">Poista ilmoittautuminen</button>
                {{else}}
                    <span style="display: inline">
                    <button aria-label="Ilmoittaudu keikalle" class="registerToEvent" id="add_{{this._id}}" type="button">Ilmoittaudu Keikalle</button>
                    </span>
                {{/if}}
            {{else}}
                <p>Sinun täytyy olla kirjautunut sisään ilmoittautuaksesi keikalle</p>
            {{/if}}
            <dt><label id="enrolment-label" for="enrollment_count">Ilmoittautuneita</label></dt>
            <dd id="enrolment_count">{{#if this.usersRegistered}}{{this.usersRegistered.length}}{{else}}0{{/if}}</dd>
        </div>

    </div>
{{/each}}  

