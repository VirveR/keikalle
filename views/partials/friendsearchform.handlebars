<search id="friend-search-form-container" aria-label="Kaverihaku">
    <form action="/event/{{concert._id}}" method="post" id="friend_search_form">

        <fieldset id="friend-age-area">
            <legend>Ikä</legend>
            <div class="age-inputs">
                <label for="min_friend_age" class="loginform-label_small" style="text-align:right">Vähintään</label>
                <input type="number" id="min_friend_age" name="min_friend_age" class="loginform-input_small" aria-label="Ikä vähintään" aria-describedby="friend_age_between"value="" min="18" max="120">

                <label for="max_friend_age" class="loginform-label_small" style="text-align:right">Enintään</label>
                <input type="number" id="max_friend_age" name="max_friend_age" class="loginform-input_small" aria-label="Ikä enintään" aria-describedby="friend_age_between"value="" min="18" max="120">
            </div>
            <span role="text" aria-label="Ikähaarukan valinnan ohje" class="validation_info" id="friend_age_between">Valitse ikä väliltä 18 ja 120</span>
        </fieldset>
        
        <p class="input_container">
            <label for="friend_gender" class="loginform-label">Sukupuoli</label>
            <select class="loginform-input" name="friend_gender" id="friend_gender">
                <option value="ei valittu">ei valittu</option>
                <option value="nainen">nainen</option>
                <option value="mies">mies</option>
                <option value="muu">muu</option>
            </select>
        </p>

        <p class="input_container">
            <label for="friend_city" class="loginform-label">Paikkakunta</label>
            <input type="text" class="loginform-input" name="friend_city" id="friend_city" value="">
        </p>

        <button type="submit" class="submit-login-button">Hae kaverit</button>

    </form>
</search>